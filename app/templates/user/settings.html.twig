{% extends 'base.html.twig' %}

{% block title %}Настройки{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('settings') }}
{% endblock %}
{% block body %}
    <h1>Настройки аккаунта</h1>

    <div class="col-lg-8">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label><b>Login:</b>
                        <input readonly name="login" value="{{ user.login }}" class="form-control">
                    </label>
                </div>
                <div class="form-group">
                    <label><b>Email:</b>
                        <input readonly name="email" value="{{ user.email }}" class="form-control">
                    </label>
                </div>
                <div class="form-group">
                    <label><b>Имя:</b>
                        <input readonly name="fullName" value="{{ user.fullName }}" class="form-control">
                    </label>
                </div>
                <br>
                <button class="btn btn-danger account-delete" data-user-id="{{ user.id }}" data-url-index="{{ path('index') }}"
                        data-url="{{ path('delete-user') }}" data-csrf="{{ csrf_token('authenticate') }}">
                    Удалить аккаунт
                </button>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <b>Пароль:</b>
                    <button class="btn btn-danger password-change" data-url="{{ path('password-change') }}">Изменить
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}