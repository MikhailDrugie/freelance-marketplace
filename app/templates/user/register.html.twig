{% extends 'user/auth_form.html.twig' %}

{% block title %}Регистрация{% endblock %}
{% block action %}Регистрация{% endblock %}

{% block error %}{{ form_errors(registrationForm) }}{% endblock %}

{% block form %}
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.login) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Пароль'
        }) }}
        {{ form_row(registrationForm.fullName, {
            label: 'Ваше имя'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
    {{ form_end(registrationForm) }}
{% endblock %}

{% block action_btn %}Зарегистрироваться{% endblock %}
