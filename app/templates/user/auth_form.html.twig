{% extends 'base.html.twig' %}

{% block body %}
    <form method="post">
        {% block error %}
        {% endblock %}

        <div class="row d-flex flex-column align-items-center">
            <div class="col-lg-5">
                <h1 class="h3 mb-3 font-weight-normal">{% block action %}{% endblock %}</h1>
            </div>
            <div class="col-lg-5">
                <div class="form-group">
                    {% block form %}{% endblock %}
                </div>
            </div>
            <br>
            <div class="col-lg-5">
                <button class="btn btn-lg btn-success" type="submit">
                    {% block action_btn %}{% endblock %}
                </button>
            </div>
        </div>
    </form>
{% endblock %}
